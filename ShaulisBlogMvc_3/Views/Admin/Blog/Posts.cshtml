@{
    ViewBag.Title = "Posts";
    Layout = "~/Views/Admin/AdminLayout.cshtml";
}

<h2>Posts</h2>
<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th></th>
        </tr>
    </thead>
    <tbody>

@foreach (var item in Model)
{
    <tr>
        <td>@item.PostTitle</td>
        <td>@item.Author</td>
        <td><a href="~/admin/blog/posts/@item.PostId/delete/">Delete</a> / <a href="~/admin/blog/posts/@item.PostId/update">Edit</a> / <a href="~/admin/blog/posts/@item.PostId/comments">Comments (@item.Comments.Count)</a></td>
    </tr>
}
            </tbody>
</table>