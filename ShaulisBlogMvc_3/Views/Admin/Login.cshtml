
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Admin Login</h2>
    <form action="/admin/login" method="post" class="form-signin" style="width:300px;">
    <h2 class="form-signin-heading">Please sign in</h2>
    <label for="User" class="sr-only">User Name</label>
    <input type="text" id="User" name="user" class="form-control" placeholder="User Name" required autofocus>
    <label for="Password" class="sr-only">Password</label>
    <input type="password" name="password" id="Password" class="form-control" placeholder="Password" required>
    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
        @if ((bool)Model)
        {
            <div class="alert alert-danger">Invalid user name or password.</div>
        }
</form>

